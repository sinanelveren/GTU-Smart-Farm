<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarr"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        app:elevation="0dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/greenButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorTransparan"
            app:borderWidth="0dp"
            android:src="@drawable/green_button"
            app:maxImageSize="115dp"
            app:fabCustomSize="120dp"
            tools:ignore="UnusedAttribute"
            app:elevation="0dp"
            android:onClick="tickClicked"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="45dp"
        android:gravity="center"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/refresh"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Yenile"
        android:background="@color/colorPrimaryDarkTransparent"
        />
    <Switch
        android:id="@+id/vanaOnOff"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Vana Otomatik"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:checked="true"
        android:layout_gravity="end"
        android:gravity="right"/>


</LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorApp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabMode="fixed"
        app:tabTextColor="@color/colorAccent"
        />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"
        >
    </android.support.v4.view.ViewPager>

</LinearLayout>